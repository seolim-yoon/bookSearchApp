<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="search"
            type="com.example.booksearchapp.model.database.dto.SearchModel" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_search_book_img"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                imageUrlSmall="@{search.imageUrl}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_search_book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{search.title}"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="@id/iv_search_book_img"
                app:layout_constraintStart_toEndOf="@id/iv_search_book_img"
                app:layout_constraintEnd_toStartOf="@id/tv_search_book_status"
                app:layout_constraintBottom_toTopOf="@id/tv_search_book_author"/>

            <TextView
                android:id="@+id/tv_search_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{search.author}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_search_book_title"
                app:layout_constraintLeft_toRightOf="@id/iv_search_book_img"/>

            <TextView
                android:id="@+id/tv_search_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{search.saleStatus}"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@id/tv_search_book_price"
                app:layout_constraintStart_toEndOf="@id/tv_search_book_title"
                app:layout_constraintTop_toTopOf="@id/tv_search_book_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_search_book_title"/>

            <TextView
                android:id="@+id/tv_search_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(search.priceStandard)}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/tv_search_book_title"
                app:layout_constraintStart_toEndOf="@id/tv_search_book_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_search_book_title"/>

            <TextView
                android:id="@+id/tv_search_book_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{search.description}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/tv_search_book_author"
                app:layout_constraintBottom_toBottomOf="@id/iv_search_book_img"
                app:layout_constraintStart_toStartOf="@id/tv_search_book_author"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
